{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.File" ], // Added Serilog.Sinks.File to the list of Serilog sinks

    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },

    "Enrich": [
      "FromLogContext",
      "WithMachineName",
      "WithProcessId",
      "WithThreadId"
    ],

    "WriteTo": [
      { "Name": "Console" }, // Console sink configuration
      {
        "Name": "File",
        "Args": {
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff} {MachineName} {ThreadId} {Message} {Exception:1} {NewLine}",
          "path": "C:\\Users\\hp\\OneDrive\\Desktop\\Logger\\\\ErrorLogs.log",
          "rollingInterval": "Day"
        }
      }
    ]
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "ReasonConnection": "Data Source=DESKTOP-MFK0N4P;Initial Catalog=dbRevalReason;Integrated Security=True;Connect Timeout=30;Encrypt=False;TrustServerCertificate=False;ApplicationIntent=ReadWrite;MultiSubnetFailover=False",
    "CommandTimeout": 400
  }
}
